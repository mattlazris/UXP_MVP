<div class="row center-experience-title">
  <div class="col-xs-12 col-sm-8">
    <div>
      <h2><%= @experience.name %></h2>
    </div>
    <div>
      <p><%= @experience.category %></p>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-xs-12 col-sm-8 center-image">
    <div class="row">
      <img class="show-margin-15" height=400px width=400px >
    </div>
    <div class="row">
      <div class="host_header"> <strong>Our Plan:</strong></div>
      <div class="text-restrict-width"><%= @experience.description %></div>
    </div>
  </div>
  <div class="col-xs-12 col-sm-4 geocode-card">
    <div class="host_info_container">
      <div class="flex-geocode"  id="center-geocode">
        <img width=384px height=200px>
      </div>
      <div class="tour-info-icons">
        <div class="icon-detail">
          <i class="fas fa-language icons"></i>
          <div class="experience-desc-after-icon"><%= "#{@experience.language}" %>
          </div>
        </div>
        <div class="icon-detail">
          <i class="far fa-clock icons"></i>
          <div class="experience-desc-after-icon"><%= "#{@experience.duration} hours" %></div>
        </div>
        <div class="icon-detail" id="adress-flex">
          <i class="fas fa-map-marker-alt icons"></i>
          <div class="experience-desc-after-icon">
            <%= "#{@experience.location}" %>
          </div>
        </div>
        <div class="icon-detail">
          <i class="fas fa-coins icons"></i>
          <div class="experience-desc-after-icon"> <%= "Â¥#{@experience.price}" %>
          </div>
        </div>
      </div>
    </div>
    <div class="row" id="book-btn-center">
      <%= link_to "Book", new_experience_booking_path(@experience), class: "btn btn-success font-white", id: "btn-book"  %>
    </div>
  </div>