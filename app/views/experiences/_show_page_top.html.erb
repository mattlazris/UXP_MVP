<div class="row">
  <div class="col-xs-12 col-sm-8">
    <div class="row">
      <div>
        <h1><%= @experience.name %></h1>
      </div>
    </div>
    <div class="row">
      <div>
        <p class="no-bottom-for-p"><strong>Sport:</strong><%=" #{@experience.category}" %></p>
      </div>
      <div>
        <p><strong>Local Teammate:</strong><%= " #{@experience.user.first_name} #{@experience.user.last_name}" %></p>
      </div>
      <div class="border-line-bottom">
      </div>
    </div>
    <div class="row">
      <div class="venue-flex-box">
        <div class="venue-title">
          Stadium Info:
        </div>
        <div class="venue-image">
          <%= cl_image_tag @experience.photo, width: 300, crop: :fill, class: "show-pic" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="tour-info-icons">
        <div class="icon-detail margin-icon top-margin-icon icon-middle-bottom">
          <div class="width-of-icon-text"><i class="fas fa-map-marker-alt icons"></i></div>
          <div class="experience-desc-after-icon"><%= "#{@experience.location}" %>
          </div>
        </div>
        <div class="icon-detail margin-icon icon-middle-bottom">
          <div class="width-of-icon-text"><i class="far fa-building icons"></i></div>
          <div class="experience-desc-after-icon"><%= "Venue: #{@experience.venue}" %>
          </div>
        </div>
        <div class="icon-detail margin-icon icon-middle-bottom">
          <div class="width-of-icon-text"><i class="far fa-clock icons"></i></div>
          <div class="experience-desc-after-icon"><%= "#{@experience.duration} hours of play" %></div>
        </div>
        <div class="icon-detail margin-icon icon-middle-bottom" id="adress-flex">
          <div class="width-of-icon-text"><i class="fas fa-fire icons"></i></div>
          <div class="experience-desc-after-icon">
            <%= "#{@experience.skill_level} skill level" %>
          </div>
        </div>
        <div class="icon-detail margin-icon bottom-margin-icon">
          <div class="width-of-icon-text"><i class="fas fa-coins icons"></i></div>
          <div class="experience-desc-after-icon"> <%= "¥#{@experience.price} per person" %>
          </div>
        </div>
        <br>
      </div>
      <div class="border-line-bottom">
      </div>
    </div>
    <div class="row">
      <div class="host_header">
        <strong>Gameplan:</strong>
      </div>
      <div class="text-restrict-width bottom-margin-icon"><%= @experience.description %></div>
      <div class="border-line-bottom">
      </div>
    </div>
    <div class="row">
      <div class="venue-flex-box">
        <div class="venue-title">
          Teammate Stats:
        </div>
        <div class="venue-image">
          <%= cl_image_tag @experience.user.photo, width: 300, crop: :fill, class: "show-pic" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="tour-info-icons">
        <div class="icon-detail margin-icon top-margin-icon icon-middle-bottom">
          <div class="width-of-icon-text"><i class="far fa-user icons"></i></div>
          <div class="experience-desc-after-icon"><%= link_to "#{@experience.user.first_name} #{@experience.user.last_name}", experience_host_path(@experience)%>
          </div>
        </div>
        <div class="icon-detail margin-icon icon-middle-bottom">
          <div class="width-of-icon-text"><i class="far fa-flag icons"></i></div>
          <div class="experience-desc-after-icon"> <%= "#{@experience.user.nationality}" %>
          </div>
        </div>
        <div class="icon-detail margin-icon icon-middle-bottom">
          <div class="width-of-icon-text"><i class="fas fa-hashtag icons"></i></div>
          <div class="experience-desc-after-icon"><%= "#{@experience.user.age} years old" %></div>
        </div>
        <div class="icon-detail margin-icon icon-middle-bottom">
          <div class="width-of-icon-text"><i class="fas fa-<%= @experience.user.gender.downcase %> icons"></i></div>
          <div class="experience-desc-after-icon"><%= "#{@experience.user.gender}" %></div>
        </div>
        <div class="icon-detail margin-icon icon-middle-bottom">
          <div class="width-of-icon-text"><i class="fas fa-language icons"></i></div>
          <div class="experience-desc-after-icon"><%= "First language: #{@experience.language}" %>
          </div>
        </div>
        <div class="icon-detail margin-icon icon-middle-bottom" id="adress-flex">
          <div class="width-of-icon-text"><i class="fas fa-fire icons"></i></div>
          <div class="experience-desc-after-icon">
            <%= "#{@experience.skill_level} skill level" %>
          </div>
          <br>
        </div>
        <div class="icon-detail margin-icon bottom-margin-icon">
          <div class="width-of-icon-text"><i class="fas fa-medal icons"></i></div>
          <div class="experience-desc-after-icon"> <%= "Favorite Player: #{@experience.user.favorite_players}" %>
          </div>
        </div>
      </div>
      <div class="border-line-bottom">
      </div>
    </div>
    <div class="row">
      <div class="host_header">
        <strong>More About <%="#{@experience.user.first_name},"%></strong>
      </div>
      <div class="text-restrict-width bottom-margin-icon"><%= @experience.user.description %></div>
      <div class="border-line-bottom">
      </div>
    </div>
    <div class="row">
      <div class="host-desc-center">
        <div>
          <%= link_to "See All of #{@experience.user.first_name}'s Game Opportunities", experience_host_path(@experience) %>
        </div>
        <div>
          <%= link_to "Keep Exploring", experiences_path %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-xs-12 col-sm-4" id="sticky-card">
    <div class="host_info_container">
      <div class="flex-geocode"  id="center-geocode">
        <div
          id="map"
          style="width: 100%;
          height: 300px;"
          data-markers="<%= @marker.to_json %>"
        ></div>
      </div>
      <div class="tour-info-icons">
        <div class="icon-detail margin-icon top-margin-icon icon-middle-bottom">
          <div class="width-of-icon-text"><i class="fas fa-map-marker-alt icons"></i></div>
          <div class="experience-desc-after-icon"><%= "#{@experience.location}" %>
          </div>
        </div>
        <!-- <div class="icon-detail margin-icon icon-middle-bottom">
          <div class="width-of-icon-text"><i class="fas fa-language icons"></i></div>
          <div class="experience-desc-after-icon"><%= "Your teammate's first language is #{@experience.language}" %>
          </div>
        </div> -->
        <div class="icon-detail margin-icon icon-middle-bottom">
          <div class="width-of-icon-text"><i class="far fa-clock icons"></i></div>
          <div class="experience-desc-after-icon"><%= "#{@experience.duration} hours of play" %></div>
        </div>
        <div class="icon-detail margin-icon icon-middle-bottom" id="adress-flex">
          <div class="width-of-icon-text"><i class="fas fa-fire icons"></i></div>
          <div class="experience-desc-after-icon">
            <%= "#{@experience.skill_level} skill level" %>
          </div>
        </div>
        <div class="icon-detail margin-icon bottom-margin-icon">
          <div class="width-of-icon-text"><i class="fas fa-coins icons"></i></div>
          <div class="experience-desc-after-icon"> <%= "¥#{@experience.price} per person" %>
          </div>
        </div>
        <div class="icon-detail">
          <%= link_to "Book", new_experience_booking_path(@experience), class: "btn btn-success font-white book-btn-fill"%>
        </div>
      </div>
    </div>
  </div>
</div>