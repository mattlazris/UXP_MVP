<h2 class="section-title-home">
  <div class="section-title-home-content">
    Top-rated sports adventures
  </div>
</h2>
<div class="container text-center">
  <div class="row experience-card-index">
    <% @experiences.each do |experience| %>
      <div class="col-xs-12 col-sm-6 col-md-4 text-center">
        <div class="wholecard">
          <%= link_to experience_path(experience) do %>
            <figure class="card snip1584" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= experience.photo %>);">
              <div class="card-category"><%= experience.category %></div>
              <img class="card-user avatar" src="https://kitt.lewagon.com/placeholder/users/atmosfeer">
            <% end %>
            <%= link_to experience_path(experience), experience: experience do %>
              <div class="backcard">
                <div class="backavatar">
                  <%= image_tag "zack.jpg", class: "img" %>
                </div>
                <h5><%= experience.user.first_name %></h5>
                <p><%= experience.user.occupation %></p>
                <h6>Click for more about experience and host</h6>
              </div>
            </figure>
            <div class="card-description">
              <p id="snip1584-name"><%= experience.name %></p>
            </div>
          <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="see-more-btn cutline">
    <a class="btn btn-sm btn-light" href="#services">See More</a>
    </div>
  </div>
