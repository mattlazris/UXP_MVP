<%= simple_form_for(@experience) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :price, placeholder: 'In RMB' %>
    <%= f.input :capacity, placeholder: 'Fill in the maximum number of people that you can host every time.' %>
    <%= f.input :photo, hint: "Upload a picture for your experience." %>
    <%= f.input :photo_cache, as: :hidden %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-success"%>
  </div>
<% end %>