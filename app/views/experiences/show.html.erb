<div class="show-wrapper">
  <div class="show-container">
    <div class="row">
      <div class="col-xs-12 col-sm-6">
        <div class="width-400">
          <h2><%= @experience.name %></h2>
          <p><%= @experience.category %></p>
        </div>
      </div>
      <div class="book col-xs-12 col-sm-6">
        <div class="height-100">
          <div class="btn btn-success btn-book font-white"><%= link_to 'Book', new_experience_booking_path(@experience) %></div>
        </div>
      </div>
    </div>
  </div>
</div>

