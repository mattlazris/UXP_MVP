<div class="show-wrapper">
  <div class="show-container">
    <div class="row">
      <div class="col-xs-12 col-sm-6">
        <div class="width-400">
          <h2><%= @experience.name %></h2>
          <p><%= @experience.category %></p>
        </div>
      </div>
      <div class="book col-xs-12 col-sm-6">
        <div class="height-100">
          <%= link_to new_experience_booking_path(@experience) do  %>
          <div class="btn btn-success btn-book font-white">Book</div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

