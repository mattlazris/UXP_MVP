<%= simple_form_for [@experience, @timeslot], method: "get" do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="form-inputs">
    <%= f.input :start_time, as: :string, hint: "When will you be able to serve guests?", input_html: {class: "datepicker"} %>
  </div>
  <br>
  <div class="form-actions">
    <%= f.submit "Add The Timeslot", class: "btn btn-success" %>
  </div>
<% end %>
